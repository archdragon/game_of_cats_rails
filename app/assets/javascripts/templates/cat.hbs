<div class="row">
  <div class="col-sm-4">
    <h2>{{name}}</h2>
    <div id="cat">
      <div class="cat-appearance">
        <img class="image-fur" {{bindAttr src="fur_image"}}>
        <img class="image-face" {{bindAttr src="face_image"}}>
        <img class="image-eyes" {{bindAttr src="eyes_image"}}>
      </div>
    </div>
  </div>

  <div class="col-sm-6">

    <!-- Stats -->
    <h2>Statistics</h2>
    <div class="row">
      <div class="col-xs-4">Energy</div>
      <div class="col-xs-8">
        <div class="progress">
          <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" {{bindAttr style="energy_bar_width_style"}}>
            {{energy}}
          </div>
        </div>
      </div>
    </div>
    <!-- End Stats -->

    <!-- Attr -->
    <h2>Attributes</h2>
    {{#each attributes}}
    <div class="row">
      <div class="col-xs-4">{{name}}</div>
      <div class="col-xs-8">
        <div class="progress">
          <div class="progress-bar progress-bar-striped" role="progressbar" {{bindAttr style="width_style"}}>
            {{value}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    <!-- End Attr -->

  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <h2>Interests</h2>
    <ul>
    {{#each interests}}
      <li>{{name}}</li>
    {{/each}}
    </ul>
  </div>
</div>